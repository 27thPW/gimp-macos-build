  <autotools id="siril" supports-non-srcdir-builds="no">
    <branch repo="git.gitlab.com" module="free-astro/siril.git" checkoutdir="siril">
</branch>
    <dependencies>
      <dep package="meta-siril-deps"/>
    </dependencies>
  </autotools>
</moduleset>